<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg navbar-dark text-white">
            <div class="container">
                <a class="navbar-brand" href="/peliculas/">
                    <img src="~/img/Netflix.png" width="150">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#">Disabled</a>
                        </li>
                    </ul>
                </div>

                <form class="form-inline">
                    <input type="text" id="my_search" data-provider="typeahead" class="form-control-sm" name="search" autocomplete="off" />
                    <button class="btn btn-outline-light btn-sm" type="submit">Search</button>
                </form>
            </div>
            
        </nav>
    </div>
    
    <div class="container-fluid body-content text-white">
        @RenderBody()

        <hr />
        <footer class="container mt-2 d-block">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            var peliculas = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('nombre'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                prefetch: {
                    url: '/api/Peliculas',
                    cache: false
                }
            });

            // peliculas.initialize();

            $('#my_search').typeahead({
                highlight: true
            },
            {
                name: 'peliculas',
                display: 'nombre',
                source: peliculas.ttAdapter()
            });

        });
        </script>
</body>
</html>
